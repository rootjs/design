abstract class ProxyObject {
  #address: void*
  #type: TDataMember
  --
  #ProxyObject(address: void*, type: TDataMember) <<constructor>>
  +getAddress(): void*
  +getType(): TDataMember
  {abstract} +set(value: ProxyObject)
  {abstract} +get(): Local<Value>
  {abstract} +isPrimitive(): bool
}

